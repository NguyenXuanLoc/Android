<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="@dimen/width350dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@null"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/width200dp"
            android:layout_height="@dimen/height200dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/check_network" />

        <TextView
            android:layout_marginTop="@dimen/magintop50dp"
            style="@style/textview_thuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="@string/feedbackNetwork"
            android:textSize="@dimen/chunho" />

        <TextView
            style="@style/textview_thuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="@string/checknetwork"
            android:textSize="@dimen/chunho" />

        <androidx.cardview.widget.CardView
            android:layout_marginBottom="@dimen/magin_botom"
            android:id="@+id/cardNetwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/magin_top"
            android:outlineAmbientShadowColor="@color/black"
            app:cardBackgroundColor="@color/orange"
            app:cardCornerRadius="@dimen/radius15"
            card_view:cardElevation="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@string/check"
                android:paddingLeft="@dimen/pading_left"
                android:paddingTop="@dimen/padingtop8dp"
                android:paddingRight="@dimen/pading_right"
                android:paddingBottom="@dimen/padingbottom8dp"
                android:text="@string/gotosetting"
                android:textColor="@color/whilte" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.cardview.widget.CardView>
