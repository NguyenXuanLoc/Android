<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backdround">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@drawable/color_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_adidi"
                app:civ_border_color="@color/gray"
                app:civ_border_width="0.7dp" />

            <TextView
                android:id="@+id/txt_name_acount"
                style="@style/textview_indam"
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/magin_top"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:text="@string/name" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/magin">

                <TextView
                    android:id="@+id/txt_number"
                    android:layout_width="@dimen/width_textview_toolbar"
                    android:layout_height="@dimen/height_textview_toolbar"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_textview"
                    android:padding="2dp"
                    android:text="0" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/magin"
                    android:src="@drawable/icon_hourglass" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/Refreshlayout"
        style="@style/Botomnavigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/heightImg"
                        android:layout_below="@id/toolbar"
                        android:scaleType="fitXY"
                        android:src="@drawable/color_toolbar" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_Cardview"
                        android:layout_margin="@dimen/magin"
                        android:outlineAmbientShadowColor="@color/black"
                        app:cardCornerRadius="@dimen/radius"
                        app:cardElevation="@dimen/cardElevation">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_img"
                            android:scaleType="fitXY"
                            android:src="@drawable/card" />
                    </androidx.cardview.widget.CardView>
                </FrameLayout>

                <TextView
                    style="@style/textview_indam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="@string/luachondichvu" />

                <TextView
                    style="@style/textview_thuong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="@string/tietkiemchiphi" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/re_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/magin_top"
                    android:layout_marginRight="@dimen/magin_top" />

                <TextView
                    style="@style/textview_indam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/magin_left"
                    android:fontFamily="serif"
                    android:text="@string/uudai" />

                <com.smarteist.autoimageslider.IndicatorView.PageIndicatorView
                    android:id="@+id/dots_prom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:piv_animationType="scale_down"
                    app:piv_radius="@dimen/piv_radius"
                    app:piv_dynamicCount="true"
                    app:piv_interactiveAnimation="true"
                    app:piv_selectedColor="@color/orange"
                    app:piv_unselectedColor="@color/gray" />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/pager_Prom"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_margin="@dimen/magin_top"
                    android:clipToPadding="false"
                    android:foregroundGravity="center"
                    android:overScrollMode="never" />

                <TextView
                    style="@style/textview_indam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="@string/discover" />

                <com.smarteist.autoimageslider.IndicatorView.PageIndicatorView
                    android:id="@+id/dots_discover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:piv_animationType="scale"
                    app:piv_radius="@dimen/piv_radius"
                    app:piv_dynamicCount="true"
                    app:piv_interactiveAnimation="true"
                    app:piv_selectedColor="@color/orange"
                    app:piv_unselectedColor="@color/gray" />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/pager_discover"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_margin="@dimen/magin_top"
                    android:clipToPadding="false"
                    android:foregroundGravity="center"
                    android:overScrollMode="never" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/magin_botom"
                    app:cardCornerRadius="@dimen/card_radius_semore">

                    <RelativeLayout
                        android:padding="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/text2"
                            style="@style/textview_thuong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="false"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:text="@string/xemthem" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/magin_left"
                            android:layout_toRightOf="@id/text2"
                            android:src="@drawable/next" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>
