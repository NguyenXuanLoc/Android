<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10dp"
        app:cardCornerRadius="@dimen/radius20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_promotion"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/background_create_account" />

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout"
                android:layout_below="@id/img_promotion"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/orange" />

            <TextView
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/layout"
                android:id="@+id/txtTitlePromotion"
                style="@style/smallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Endow"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txtTitlePromotion"
                android:id="@+id/txtInfoPromotion"
                style="@style/smallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/Endow"/>

            <TextView
                android:fontFamily="serif"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txtInfoPromotion"
                android:id="@+id/txtSeeMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin10dp"
                android:layout_marginBottom="@dimen/margin10dp"
                android:text="@string/seeMore"
                android:textColor="@color/orange" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>