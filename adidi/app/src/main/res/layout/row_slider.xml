<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_promotion"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/background_create_acount" />

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout"
                android:layout_below="@id/img_promotion"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/orange" />

            <TextView
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/layout"
                android:id="@+id/txt_name_promtion"
                style="@style/textview_thuong"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/uudai"
                android:textColor="@color/black"
                android:textSize="@dimen/chuthuong" />

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txt_name_promtion"
                android:id="@+id/txt_Info_promtion"
                style="@style/textview_thuong"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/uudai"
                android:textSize="@dimen/chuthuong" />

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txt_Info_promtion"
                android:id="@+id/txt_seemore_promtion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/magin_top"
                android:layout_marginBottom="@dimen/magin_top"
                android:text="@string/xemthem"
                android:textColor="@color/orange" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>