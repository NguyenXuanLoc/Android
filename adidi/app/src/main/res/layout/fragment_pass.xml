<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin40dp"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/Card8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                style="@style/mediumEditText"
                android:id="@+id/edtPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/PhoneNumber"
                android:padding="@dimen/padding10dp"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <EditText
                style="@style/mediumEditText"
                android:inputType="textPassword"
                android:id="@+id/edtPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/passWord"
                android:padding="@dimen/padding10dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        style="@style/buttonOrange"
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin40dp"
        android:layout_marginRight="@dimen/margin40dp"
        android:background="@drawable/select_create"
        android:text="@string/Login" />

    <TextView
        android:id="@+id/txt_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margin40dp"
        android:text="@string/forgotPass"
        android:textColor="@color/white"
        style="@style/mediumText" />
</LinearLayout>