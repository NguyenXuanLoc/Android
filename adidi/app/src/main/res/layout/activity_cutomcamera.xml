<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_custom_camera"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frameCamera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:id="@+id/layoutFlat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_layoutCam">

        <ImageView
            android:id="@+id/imgFlat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/magin"
            android:background="@color/whilte"
            android:src="@drawable/flash_off" />

        <TextView
            style="@style/textview_thuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/magin"
            android:fontFamily="serif"
            android:text="Há»§y"
            android:textColor="@color/whilte"
            android:textSize="@dimen/chuthuong" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutCap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_layoutCam"
        android:layout_alignParentBottom="true"
        android:background="@null">

        <ImageView
            android:id="@+id/CapImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/select_camera" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mylayout"/>
</RelativeLayout>
