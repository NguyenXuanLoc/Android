<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/width130dp"
        android:layout_height="@dimen/height130dp"
        app:cardCornerRadius="@dimen/radius"
        card_view:cardElevation="@dimen/card10dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imgService"
                android:layout_width="@dimen/width80dp"
                android:layout_height="@dimen/height80dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/service_rent" />

            <TextView
                android:id="@+id/txtService"
                style="@style/smallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="@string/name_service" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>